@model U5_W4_BuildWeek.Models.DbModels.Visite

@{
    ViewBag.Title = "create";
}

<h2 class="titolo">Aggiungi visita</h2>

<div class="wrapper fadeInDown">


    @using (Html.BeginForm("Create", "Visite", FormMethod.Post, new { id = "formContent", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label for="DataVisita" class="label-form">@Html.Raw("<strong>Inizio visita</strong>")</label>
            @Html.TextBoxFor(model => model.DataVisita, "{0:yyyy-MM-dd}", new { type = "date" })
            @Html.ValidationMessageFor(model => model.DataVisita, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="EsameObbiettivo" class="label-form">@Html.Raw("<strong>Esame Obbiettivo</strong><span class='star'> *</span>")</label>
            @Html.EditorFor(model => model.EsameObbiettivo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EsameObbiettivo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="DescrizioneCura" class="label-form">@Html.Raw("<strong>Descrizione Cura</strong><span class='star'> *</span>")</label>
            @Html.EditorFor(model => model.DescrizioneCura, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DescrizioneCura, "", new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(model => model.FkAnimale, htmlAttributes: new { @Value = @ViewBag.Id })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Aggiungi" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
