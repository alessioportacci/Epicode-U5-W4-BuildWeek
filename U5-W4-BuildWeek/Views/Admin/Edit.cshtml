@model U5_W4_BuildWeek.Models.DbModels.Utenti

@{
    ViewBag.Title = "Edit";
}

<section class="form-container">


    <h2 class="titolo">Modifica @Model.Username</h2>

    <div class="wrapper fadeInDown">

        @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { id = "formContent" }))
        {
            @Html.AntiForgeryToken()

            <p><span class="star">* </span>CAMPI RICHIESTI</p>


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)


            <div class="form-group">
                <label for="Username" class="label-form">@Html.Raw("<strong>Username</strong><span class='star'> *</span>")</label>
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Password" class="label-form">@Html.Raw("<strong>Password</strong><span class='star'> *</span>")</label>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Nome" class="label-form">@Html.Raw("<strong>Nome</strong>")</label>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="CF" class="label-form">@Html.Raw("<strong>Codice Fiscale</strong>")</label>
                @Html.EditorFor(model => model.CF, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CF, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Telefono" class="label-form">@Html.Raw("<strong>Telefono</strong>")</label>
                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Email" class="label-form">@Html.Raw("<strong>Email</strong>")</label>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Ruolo" class="label-form">@Html.Raw("<strong>Ruolo</strong>")</label>
                @Html.DropDownListFor(model => model.Ruolo, (SelectList)ViewBag.Ruoli)
                @Html.ValidationMessageFor(model => model.Ruolo, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Modifica" class="btn btn-default" />
                </div>
            </div>
        }
    </div>

</section>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
