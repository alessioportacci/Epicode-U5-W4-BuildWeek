@model IEnumerable<U5_W4_BuildWeek.Models.DbModels.Utenti>

@{
    ViewBag.Title = "Index";
}

<div class="table-container">

    <div class="aggiungi">
    </div>
    <div class="table-animali">
        <div class="header">Registro utenti</div>

        <table class="">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ruolo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ruolo)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fa-solid fa-pencil table-icon"></i></a>
                        <a href="@Url.Action("Details", new { id = item.Id })"><i class="fa-solid fa-magnifying-glass table-icon"></i></a>
                        <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fa-solid fa-trash-can table-icon"></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="pb-5"></div>

</div>