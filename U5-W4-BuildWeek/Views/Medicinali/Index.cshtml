@model IEnumerable<U5_W4_BuildWeek.Models.DbModels.Medicinali>

@{
    ViewBag.Title = "Elenco dei Medicinali";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assicurati che sia incluso un layout appropriato
}

<div class="container my-3">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header">
                    <h2 class="text-center">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    <div class="text-right mb-3">
                        <a href="@Url.Action("Create")" class="btn btn-warning">Crea Medicinale</a>
                        <a href="@Url.Action("ListaDitte")" class="btn btn-warning">Fornitori</a>
                    </div>

                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Costo</th>
                                <th>Tipologia</th>
                                <th>Modifica</th>
                                <th>Elimina</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model)
                            {
                                <tr>
                                    <td>@m.Nome</td>
                                    <td>@string.Format("{0:C}", m.Costo)</td>
                                    <td>
                                        @if (m.Medicinale)
                                        {
                                            <p>Medicinale</p>
                                        }
                                        else
                                        {
                                            <p>Alimento</p>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Modifica", new { id = m.Id })" class="btn btn-warning">Modifica</a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Delete", new { id = m.Id })" class="btn btn-danger">Elimina</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
