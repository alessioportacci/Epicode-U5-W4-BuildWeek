@model U5_W4_BuildWeek.Models.DbModels.Medicinali

@{
    ViewBag.Title = "Create";
}
<section class="form-container">
    <h2 class="titolo">Registra Medcinale</h2>

    <div class="wrapper fadeInDown">

        @using (Html.BeginForm("Create", "Medicinali", FormMethod.Post, new { id = "formContent", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <p><span class="star">* </span>CAMPI RICHIESTI</p>

            <div class="form-group">
                <label for="Nome" class="label-form"><strong>Nome</strong><span class="star"> *</span></label>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Medicinale, htmlAttributes: new { @class = "control-label " })

                <div class="checkbox text-center">
                    @Html.EditorFor(model => model.Medicinale)
                    @Html.ValidationMessageFor(model => model.Medicinale, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
                <label for="Costo" class="label-form"><strong>Costo</strong><span class="star"> *</span></label>
                @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "form-control", type= "Number" } })
                @Html.ValidationMessageFor(model => model.Costo, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Registra medicinale" class="btn btn-primary my-3" />
            </div>

            <div class="form-group">
                @Html.ActionLink("Torna indietro", "index", null, new { @class = "backLink" })
            </div>
        }
    </div>
</section>
